<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_monthly_input"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4ab970"
    tools:context="com.example.briandesouza.saveitwhilewecan.MonthlyInputActivity">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="60dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:isScrollContainer="true"
        android:scrollbars="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Consumptions for the Month:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/consumptionsLabel"
            android:textStyle="normal|italic"
            android:textColor="@color/cardview_light_background"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="6dp" />

        <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3">

            <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="2dp">

                    <ImageView
                        app:srcCompat="@drawable/house"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="40dp"
                        android:layout_width="40dp" />

                    <TextView
                        android:text="Household Size"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:textSize="13sp"
                        android:textColor="@color/cardview_light_background"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/houseSize"
                        style="@style/Widget.AppCompat.EditText"
                        android:textAlignment="center"
                        android:textStyle="normal|bold" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="2dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:srcCompat="@drawable/energy"
                        android:layout_gravity="center_horizontal" />

                    <TextView
                        android:text="Energy (kWh)"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:textSize="13sp"
                        android:textColor="@color/cardview_light_background"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="4dp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/energyConsumption"
                        style="@style/Widget.AppCompat.EditText"
                        android:textAlignment="center"
                        android:textStyle="normal|bold" />

                </LinearLayout>



                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="2dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:srcCompat="@drawable/water2"
                        android:layout_gravity="center_horizontal" />

                    <TextView
                        android:text="Water (gallons)"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:textSize="13sp"
                        android:textColor="@color/cardview_light_background"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="4dp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/waterConsumption"
                        style="@style/Widget.AppCompat.EditText"
                        android:textAlignment="center"
                        android:textStyle="normal|bold" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="2dp">

                    <ImageView
                        app:srcCompat="@drawable/plane"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="40dp"
                        android:layout_width="40dp" />

                    <TextView
                        android:text="Flights"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView5"
                        android:gravity="center_horizontal"
                        android:textSize="13sp"
                        android:textColor="@color/cardview_light_background"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/flightsAmt"
                        style="@style/Widget.AppCompat.EditText"
                        android:textAlignment="center"
                        android:textStyle="normal|bold" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="2dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:srcCompat="@drawable/garbage"
                        android:layout_gravity="center_horizontal" />

                    <TextView
                        android:text="Trash Bags"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView6"
                        android:gravity="center_horizontal"
                        android:textSize="13sp"
                        android:textColor="@color/cardview_light_background"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="4dp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/trashBag"
                        style="@style/Widget.AppCompat.EditText"
                        android:textAlignment="center"
                        android:textStyle="normal|bold" />

                </LinearLayout>



                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="2dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:srcCompat="@drawable/recycle"
                        android:layout_gravity="center_horizontal" />

                    <TextView
                        android:text="Recycled Bags"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView8"
                        android:gravity="center_horizontal"
                        android:textSize="13sp"
                        android:textColor="@color/cardview_light_background"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="4dp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/recycleBag"
                        style="@style/Widget.AppCompat.EditText"
                        android:textAlignment="center"
                        android:textStyle="normal|bold" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </GridLayout>

        <TextView
            android:text="Donations for the Month:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/donationsLabel"
            android:textSize="18sp"
            android:textStyle="normal|italic"
            android:textColor="@color/cardview_light_background"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="6dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:padding="10dp"
            android:layout_height="80dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    app:srcCompat="@drawable/nrdc"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:layout_width="120dp"
                    android:layout_height="120dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:text="NRDC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView11"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:layout_marginLeft="24dp"
                        android:textStyle="normal|bold"
                        android:textColor="@color/cardview_light_background" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/donationAmtNRDC"
                        android:layout_weight="1"
                        android:padding="6dp"
                        android:layout_marginLeft="24dp"
                        android:textColor="@android:color/white"
                        android:hint="donation amount (USD)" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:background="@color/colorPrimary">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    app:srcCompat="@drawable/sierra"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:text="Sierra Club"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView13"
                        android:layout_marginLeft="24dp"
                        android:textSize="20dp"
                        android:textStyle="normal|bold"
                        android:textColor="@color/cardview_light_background" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:id="@+id/donationAmtSierra"
                        android:hint="donation amount (USD)"
                        android:layout_marginLeft="24dp"
                        android:padding="6dp"
                        android:layout_weight="1"
                        android:textColor="@android:color/white"
                        android:inputType="number" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"
            android:padding="10dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    app:srcCompat="@drawable/carbofund"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:text="CarbonFund"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView12"
                        android:layout_marginLeft="24dp"
                        android:textSize="20sp"
                        android:textStyle="normal|bold"
                        android:textColor="@color/cardview_light_background" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/donationAmtCarbon"
                        android:layout_marginLeft="24dp"
                        android:padding="6dp"
                        android:hint="donation amount (USD)"
                        android:textColor="@android:color/white"
                        android:layout_weight="1" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:text="SUBMIT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/submitBtnMonthly"
            android:layout_marginTop="10dp"
            android:background="@color/cardview_dark_background"
            android:textColor="@color/cardview_light_background"
            android:textStyle="normal|bold" />

    </LinearLayout>

    </ScrollView>

    <com.roughike.bottombar.BottomBar
        android:id="@+id/bottomBar4"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:bb_inActiveTabColor="#FFFFFF"
        app:bb_activeTabColor="#FFFFFF"
        android:layout_alignParentBottom="true"
        app:bb_tabXmlResource="@xml/bottombar_tabs"
        />

</RelativeLayout>
