<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#4ab970"
    tools:context="com.example.briandesouza.saveitwhilewecan.MainActivity">

    <TextView
        android:text="So far so good! You might want to consider taking the bus instead of driving and eating chicken instead of beef next time."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tipBox"
        android:layout_weight="3"
        android:background="@android:color/transparent"
        android:textAlignment="center"
        android:paddingTop="10dp"
        android:layout_marginTop="57dp"
        android:paddingBottom="10dp"
        android:padding="10dp"
        android:textColor="@android:color/transparent"
        android:clickable="false"
        style="@style/Base.AlertDialog.AppCompat.Light"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Your Overall Eco Score"
            android:ems="10"
            android:id="@+id/titleLabel"
            android:layout_weight="3"
            android:gravity="center_vertical|center"
            android:textSize="32sp"
            android:textColor="@android:color/white"
            android:textStyle="normal|bold"
            android:layout_marginTop="5dp"
            android:clickable="false"
            android:focusableInTouchMode="false" />


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:columnOrderPreserved="false"
            android:padding="25dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberSigned"
                    android:ems="10"
                    android:id="@+id/todayScore"
                    android:text="67"
                    android:textAlignment="center"
                    android:textSize="50sp"
                    android:textStyle="normal|bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:clickable="false"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>

        </GridLayout>

    </LinearLayout>

    <TextView
        android:text="In one year you will be saving:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="23sp"
        android:textColor="@android:color/white"
        android:id="@+id/textView7"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textStyle="normal|bold" />

    <GridLayout
        android:layout_width="360dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/suggestionBox"
        android:layout_marginTop="80dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="115dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/power"
                android:id="@+id/imageView13"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="119dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                app:srcCompat="@drawable/water"
                android:id="@+id/imageView15" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="119dp"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="6"
            android:weightSum="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                app:srcCompat="@drawable/tree"
                android:id="@+id/imageView14" />
        </LinearLayout>

    </GridLayout>

    <TextView
        android:text="So far so good! You might want to consider taking the bus instead of driving and eating chicken instead of beef next time."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/suggestionBox"
        android:layout_weight="3"
        android:background="@android:color/background_light"
        android:paddingTop="13dp"
        android:paddingBottom="10dp"
        android:padding="10dp"
        android:textColor="?android:attr/textColorHint"
        android:clickable="false"
        style="@style/Base.AlertDialog.AppCompat.Light"
        android:alpha=".7"
        android:elevation="13dp"
        android:textStyle="normal|bold"
        android:textAlignment="center"

        android:layout_below="@+id/tipBox"
        android:layout_alignParentStart="true" />


</RelativeLayout>
